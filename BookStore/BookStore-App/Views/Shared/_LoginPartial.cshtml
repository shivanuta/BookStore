@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http;
@{
    bool isvaliduser = true;
    var Token = @Context.Session.GetString("Token");
}
<ul class="navbar-nav">
    @*@if (SignInManager.IsSignedIn(User))*@
    @if (isvaliduser)
    {
        <li class="nav-item" style="align-self: center;">
            @if (isvaliduser)
            @if (!string.IsNullOrEmpty(Token))
            {
                <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png">
            }
        </li>
        <li class="nav-item">
            
            <a class="nav-link text-dark" asp-area="" asp-page="/Manage/Index" title="Manage">Hello @Context.Session.GetString("Username")</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-page="/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"></form>
            <form class="form-inline" asp-controller="Logout" asp-action="Index" method="get" >
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="UserLogin">LogIn</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">AdminLogIn</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Registration" asp-action="Index">Register</a>
        </li>
    }
</ul>
