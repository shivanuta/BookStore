@{
    Layout = "_userLayout";
}


<div class="container">
    <main role="main" class="pb-3">

        @model BookStore_Models.Requests.CategoryRequest
        @{
            if (Model == null)
                ViewData["Title"] = "Add Category";
            else
                ViewData["Title"] = "Update Category";
        }

        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">

                <form asp-route-returnUrl="" method="post" asp-action="AddCategory">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="text-end">
                        @{
                            if (Model == null)
                            {
                                <button type="submit" class="btn btn-primary mt-3">Add</button>
                            }

                            else
                            {
                                <button type="submit" class="btn btn-primary mt-3">update</button>
                            }
                        }
                    </div>

                    @Html.HiddenFor(modelItem => modelItem.Id)
                    @Html.HiddenFor(modelItem => modelItem.CreatedBy)
                    @Html.HiddenFor(modelItem => modelItem.CreatedDate)
                </form>
            </div>

        </div>

        @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        }
    </main>
</div>

